<% layout('boilerplate/commonContent') %>
    <nav id="mainNav" class="navbar navbar-expand-lg  navbar-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand mx-2" href="/"><i class="fa fa-globe"></i> NewsBin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="/">Home</a>
                    <a class="nav-link" href="/articles/postArticle">Post</a>
                    <% if(factor==0) { %>
                        <a class="nav-link" href="/userRegistration">Register</a>
                        <% } %>
                            <a class="nav-link" href="/articles/showAll/1">Articles</a>
                </div>
                <div class="navbar-nav" style="margin-left: auto;padding-right: 13px;">
                    <% if(factor==1){ %>
                        <a class="nav-link" href="/profile"><i class="fa fa-user" style="font-size:25px"></i></a>
                        <a class="nav-link" href="/logOut">Log Out</a>
                        <% } else{ %>
                            <a class="nav-link" href="/logIn">Log In</a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-5 col-sm-12 col-12">
                <% if(successMessage.length>0) {%>
                    <div class="alert  alert-success alert-dismissible fade show text-center" role="alert">
                        <strong> SUCCESS : </strong>
                        <%= successMessage %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <% if(errorMessage.length>0) {%>
                            <div class="alert alert-danger  alert-dismissible fade show text-center" role="alert">
                                <strong> ERROR : </strong>
                                <%= errorMessage %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>
            </div>
            <div class="col-sm-1"></div>
        </div>
        <div class="row">
            <div class="col-sm-1">
            </div>
            <div class="col-md-5 col-sm-12 col-12">
                <div class="card" style="background-color:#e5eff7">
                    <img src="<%= article.image %> " class="card-img-top img-fluid" style="height:342px" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">
                            <%= article.title %>
                        </h3>
                        <p id="content" class="card-text" style="font-size:16px;">
                            <%= article.content %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li style="background-color: #e5eff7;font-family:'Nunito', sans-serif ;"
                            class="list-group-item"> Posted by : <%= ownerName %>
                        </li>

                    </ul>
                    <div class="card-footer">
                        <% if(authorizedUser==1) { %>

                            <form style="display: inline;" method="POST" action="/articles/delete/<%= article._id %>">
                                <button class="btn btn-danger px-3 btn-sm"
                                    style="font-family:'Nunito', sans-serif ;">Delete Post</button>
                            </form>
                            <a class="btn btn-primary px-3 btn-sm" style="font-family:'Nunito', sans-serif ;"
                                href="/articles/edit/<%= article._id %>/<%= ownerName %>">Edit Post</a>
                            <% } else { %>
                                <form style="display: inline;" method="POST"
                                    action="/articles/delete/<%= article._id %>">
                                    <button disabled class="btn btn-danger px-3 btn-sm"
                                        style="font-family:'Nunito', sans-serif ;">Delete Post</button>
                                </form>
                                <form method="GET" style="display: inline;"
                                    action="/articles/edit/<%= article._id %>/<%= ownerName %>">
                                    <button disabled class="btn btn-primary px-3 btn-sm"
                                        style="font-family:'Nunito', sans-serif ;">Edit Post</button>
                                </form>
                                <% } %>

                    </div>
                </div>
            </div>
            <div class="col-md-5 col-sm-12 col-12">
                <% if(factor==1) {%>
                    <h2 id="heading" class="text-light">Leave a comment</h2>
                    <form id="form" class="ValidForm px-0" novalidate method="POST" action="/addReview/<%= article._id %>">
                        <span class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                                aria-label="No rating." required />
                            <input type="radio" id="first-rate1" name="rating" value="1" required />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" required />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" required />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" required />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" required />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </span>
                        <div class="form-floating">
                            <textarea class="form-control" required placeholder="Leave a comment here" name="comment"
                                id="floatingTextarea2" style="height: 90px"></textarea>
                            <label for="floatingTextarea2">Add a comment</label>
                        </div>
                        <div class="mt-1  mb-2">
                            <button style="width:100%;font-family: 'Nunito', sans-serif ;" class="
                      btn btn-success py-2">Submit</button>
                        </div>
                    </form>
                    <% } %>
                        <div id="parent" class="card-body py-1 px-0">
                            <% if(article.reviews.length==0) { %>
                                <h2 class="text-center text-light" style="font-family: 'Nunito', sans-serif ">No comments yet</h2>
                            <% } else { %>
                                <ul id="commentsList" class="list-group list-group-flush">
                                    <div id="innercard"></div>
                                </ul> 
                                <nav class="mt-1">
                                    <ul class="pagination" id="pagination"></ul>
                                </nav>
                            <% } %>
                        </div>
            </div>

        </div>
</div>

<script>
  const commentsData = <%- JSON.stringify(article.reviews) %>;
  let currentUsername = null;
  const currentUser = <%- JSON.stringify(user) %>;
  if(currentUser != undefined && currentUser != null) {
    currentUsername = currentUser.Username;
  }
  const factor = "<%= factor %>";
  const articleId = "<%= article._id %>";
  let currentPage = 1;
  const itemsPerPage = 2;
  const totalPages = Math.ceil(commentsData.length / itemsPerPage);

  function renderComments() {
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const paginatedItems = commentsData.slice(start, end);
    let html = "";
    paginatedItems.forEach(comment => {
      const showDelete = (factor == 1 && comment.user == currentUsername);
      let stars = "";
      for (let i = 1; i <= 5; i++) {
        stars += i <= comment.rating 
        ? `<span style="color: gold;">&#9733;</span>`  
        : `<span>&#9733;</span>`;
      }

      html += `<div class="mb-1 card text-white bg-primary" style="width: 100%">
        <div class="card-header">Comment by ${comment.user}</div>
        <div class="card-body">
            <h5 class="card-title">Rating : ${stars} </h5>
            <p class="card-text">${comment.body}</p>
        </div>
        ${showDelete ? `
         <div class=" mb-2 px-3">
                <form method="post" action="/deleteReview/${articleId}/${comment._id}">
                 <button class="btn px-2 btn-sm btn-danger" style="font-family: 'Nunito', sans-serif ;">
                    Delete  &#128465;
                 </button>
                </form>
         </div>` : ""}
        </div>`;
    });
    document.getElementById("innercard").innerHTML = html;
  }

  function renderPagination() {
    let html = "";
    html += `
      <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">Previous</a>
      </li>
    `;
    for (let i = 1; i <= totalPages; i++) {
      html += `
        <li class="page-item ${currentPage === i ? 'active' : ''}">
          <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
        </li>`;
    }
    html += `
      <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">Next</a>
      </li>
    `;
    document.getElementById("pagination").innerHTML = html;
  }

  function changePage(page) {
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    renderComments();
    renderPagination();
  }

  // Initial render
  renderComments();
  renderPagination();
</script>