<% layout('boilerplate/commonContent') %>
    <nav id="mainNav" class="navbar navbar-expand-lg navbar-dark  sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand mx-2" href="/"><i class="fa fa-globe"></i> NewsBin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="/">Home</a>
                    
                    <a class="nav-link" href="/articles/showAll/1">Articles</a>
                    
                </div>
                <div class="navbar-nav" style="margin-left: auto;">
                    <a class="nav-link " href="/profile"><i class="fa fa-user" style="font-size: 25px;"></i></a>
                    <a class="nav-link" href="/logOut">Log Out</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container py-2">
        
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-5 col-sm-12 col-12">
                <div class="card" style="background-color:#e5eff7">
                    <img src="<%= article.image %> " class="card-img-top img-fluid" style="height:380px" alt="...">
                    <div class="card-body">
                        <h3 class="card-title" style="font-family: 'Nunito', sans-serif;text-shadow: 0.5px 0.5px 1px rgb(167, 163, 163);"><%= article.title %> </h3>
                        <p id="content" class="card-text"><%= article.content %> </p>                    
                      </div>
                      <ul class="list-group list-group-flush">
                        <li style="background-color: #e5eff7;font-family:'Nunito', sans-serif ;" class="list-group-item"> Posted by :  <%= ownerName %>  </li>
                        
                      </ul>
                </div>

            </div>
            <div class="col-md-5 col-sm-12 col-12 py-2">
                
                <form class="ValidForm" novalidate autocomplete="off" action="/articles/edit/<%= article._id %>" method="POST" enctype="multipart/form-data">
                    <div class="form-floating mb-1">
                        <input maxlength="30" type="text" class="form-control" name="subject" value="<%= article.title %>" id="sub" placeholder="name@example.com" required>
                        <label for="sub">Article Subject</label>
                        
                      </div>
                      <div class="form-floating mb-1">
                        <textarea class="form-control" maxlength="1500" placeholder="Leave a comment here"  name="body" required id="floatingTextarea2" style="height: 200px"><%= article.content %> </textarea>
                        <label for="floatingTextarea2">Article Content</label>
                        
                      </div>
                      <div class="input-group mb-2">
                        <input type="file" class="form-control" name="articlePic" id="dp"  required >
                        <label class="input-group-text" for="dp">Picture</label>
                        
                      </div>
                      <div>
                        <button class="btn btn-info py-2" style="width:100%;font-family: 'Nunito', sans-serif;">UPDATE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   