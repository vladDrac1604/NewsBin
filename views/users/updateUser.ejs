<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update User</title>
    <style>
      #mainNav .navbar-brand {
        color: cyan;
        font-size: 30px;
      }

      #mainNav .nav-link {
        font-size: 20px;
        color: white;
        transition: 0.4s ease-in-out;
      }

      .navbar {
        font-family: "Nunito", sans-serif;
      }

      #mainNav .nav-link:hover {
        text-decoration: underline;
      }

      h2 {
        font-family: "Nunito", sans-serif;
        text-shadow: 0.5px 0.5px 2px rgb(167, 163, 163);
      }

      label {
        font-family: "Nunito", sans-serif;
        padding-left: 3px;
        text-shadow: 0.5px 0px 1px rgb(167, 163, 163);
      }
      .card-body {
        background-color: #e5eff7;
      }
      body {
        background-image: linear-gradient(
            rgba(0, 0, 0, 0.6),
            rgba(0, 0, 0, 0.6)
          ),
          url("https://cdn.pixabay.com/photo/2016/02/01/00/56/news-1172463__480.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
      }
    </style>
    <link
      href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat&family=Eczar&family=Josefin+Slab:wght@600&family=Nunito&family=Pacifico&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex flex-column vh-100">
    <nav id="mainNav" class="navbar navbar-expand-lg navbar-dark sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand mx-2" href="/"
          ><i class="fa fa-globe"></i> NewsBin</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/articles/postArticle">Post</a>

            <a class="nav-link" href="/articles">Articles</a>
          </div>
          <div class="navbar-nav" style="margin-left: auto">
            <a class="nav-link" href="/profile"
              ><i class="fa fa-user" style="font-size: 25px"></i
            ></a>
            <a class="nav-link" href="/logOut">Log Out</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container py-4">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-12 col-md-5 col-12">
          <div class="card" style="background-color: #e5eff7">
            <img
              src="<%= user.Profilepic %> "
              class="card-img-top img-fluid"
              style="height: 400px"
              alt="..."
            />
            <div class="card-body">
              <h4
                class="card-title"
                style="
                  font-family: 'Nunito', sans-serif;
                  text-shadow: 0.5px 0.5px 1px rgb(167, 163, 163);
                "
              >
                <%= user.Name %>
              </h4>
              <p class="card-text"><%= user.Description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li
                style="
                  background-color: #e5eff7;
                  font-family: 'Nunito', sans-serif;
                "
                class="list-group-item"
              >
                Email address :
                <span class="badge bg-danger px-2 py-2">
                  <%= user.Email %>
                </span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-sm-12 col-md-5 col-12 py-2">
          <% if(errorMessage.length>0) {%>
          <div
            class="alert alert-danger mt-1 alert-dismissible fade show text-center"
            role="alert"
          >
            <strong>ERROR : </strong>
            <%= errorMessage %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
          <% if(infoMessage.length>0) {%>
            <div
              class="alert alert-info mt-1 alert-dismissible fade show text-center"
              role="alert"
            >
              <strong>ERROR : </strong>
              <%= infoMessage %>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
            </div>
            <% } %>
          <form
            autocomplete="off"
            action="/updateUser/<%= user._id %>"
            method="POST"
            novalidate
            class="ValidForm"
          >
            <div class="form-floating mb-1">
              <input
                type="text"
                class="form-control"
                id="name"
                name="fullName"
                value="<%= user.Name %>"
                placeholder="name@example.com"
                required
              />
              <label for="name">Full Name</label>
            </div>
            <div class="form-floating mb-1">
              <input
                type="text"
                class="form-control"
                required
                name="username"
                id="floatingInput"
                value="<%= user.Username %>"
                placeholder="name@example.com"
              />
              <label for="floatingInput">Username</label>
            </div>

            <div class="form-floating mb-1">
              <textarea
                class="form-control"
                required
                maxlength="200"
                placeholder="Leave a comment here"
                name="desc"
                id="floatingTextarea2"
                style="height: 95px"
              >
<%= user.Description %> </textarea
              >
              <label for="floatingTextarea2">Description</label>
            </div>
            <div class="form-floating">
              <input
                type="password"
                class="form-control"
                name="password"
                required
                id="floatingPassword"
                placeholder="Password"
              />
              <label for="floatingPassword">Password</label>
            </div>
            <div class="mt-2">
              <button
                style="width: 100%; font-family: 'Nunito', sans-serif"
                class="btn btn-info py-2"
              >
                UPDATE
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <footer class="footer py-2 mt-auto">
      <div class="container">
        <span class="text-light">&copy; NewsBin 2022</span>
      </div>
    </footer>

    <script>
      (function () {
        "use strict";

        const forms = document.querySelectorAll(".ValidForm");

        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
