<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.Name %>'s Profile </title>
    <style>
        .card-title{
            font-family: 'Nunito', sans-serif;
            text-shadow: 0.5px 0.5px 1px rgb(167, 163, 163);
            
        }
        
        #mainNav .navbar-brand {
            color:cyan;
            font-size: 30px;

        }

        #mainNav .nav-link {
            font-size: 20px;
            transition: 0.4s ease-in-out;
            color: white;
        }

        .navbar {
            font-family: 'Nunito', sans-serif;
        }

        #mainNav .nav-link:hover {
            text-decoration: underline;
        }
        #parent{
          overflow: hidden;
        }
        /* #ReviewDisplay{
          width:100%;
          height:404px;
          overflow-y:scroll;
          padding-right: 24px;
          padding-left: 7px;
          box-sizing: content-box;
        } */
        body{
            background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),url('https://cdn.pixabay.com/photo/2016/02/01/00/56/news-1172463__480.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }
        @media(max-width:576px){
           #postsDisplay{
               padding-right: 0px;
               padding-left: 0px;
               overflow-x: scroll;
           }
        }
    </style>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Caveat&family=Eczar&family=Josefin+Slab:wght@600&family=Nunito&family=Pacifico&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="d-flex flex-column vh-100">
    <nav id="mainNav" class="navbar navbar-expand-lg  navbar-dark  sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand mx-2" href="/"><i class="fa fa-globe"></i> NewsBin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="/">Home</a>
                    <a class="nav-link" href="/articles/postArticle">Post</a>
                   <% if(factor==0){ %>
                    <a class="nav-link" href="/userRegistration">Register</a>
                    <% } %>  
                    <a class="nav-link" href="/articles/showAll/1">Articles</a>
                </div>
                <div class="navbar-nav" style="margin-left: auto;padding-right: 13px;">
                    <% if(factor==0) {%>
                        <a class="nav-link" href="/logIn">Log In</a>
                        <% } else {%>  
                        <a  class="nav-link" href="/profile"><i class="fa fa-user" style="font-size: 25px;"></i></a>
                    <a class="nav-link" href="/logOut">Log Out</a>
                    <% } %> 
                </div>
            </div>
        </div>
    </nav>
    <div class="container py-4">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-5 col-sm-12 col-12">
                <div class="card" style="background-color:#e5eff7">
                    <img src="<%= user.Profilepic %> " class="card-img-top img-fluid" style="height:400px" alt="...">
                    <div class="card-body" style="background-color:#e5eff7">
                      <h4 class="card-title"><%= user.Name %> </h4> 
                      <p class="card-text"><%= user.Description %> </p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li style="background-color: #e5eff7;font-family:'Nunito', sans-serif ;" class="list-group-item"> Email address : <span  class="badge bg-success px-2 py-2"> <%= user.Email %> </span> </li>
                    </ul>    
                </div>
            </div>
            <div id="parent" class="col-md-5 col-sm-12 col-12 py-1">
                <% if(posts.length==0) { %>
                    <h2 class="text-center text-light" style="font-family: 'Nunito', sans-serif;
                    text-shadow: 0.5px 0.5px 1px rgb(167, 163, 163);">No articles posted yet.</h2>
                <% } else { %>  
                <ul class="list-group list-group-flush">
                    <div id="postsDisplay"></div>
                    <nav class="mt-1">
                        <ul class="pagination" id="pagination"></ul>
                    </nav>
                <% } %> 
                </ul>
            </div>

        </div>
    </div>

    <footer class="footer py-2  mt-auto">
        <div class="container ">
         <span class="text-light">&copy; NewsBin 2022</span>
        </div>
     </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script>
        const postsData = <%- JSON.stringify(posts) %>;
        let currentPage = 1;
        const itemsPerPage = 2;
        const totalPages = Math.ceil(postsData.length / itemsPerPage);

        function renderPosts() {
          const start = (currentPage - 1) * itemsPerPage;
          const end = start + itemsPerPage;
          const paginatedItems = postsData.slice(start, end);
          let html = "";
          paginatedItems.forEach(post => {
             html += `<div class="mb-1 card text-white bg-primary" style="width: 100%">
        <div class="card-header">Posted on ${post.uploadDate} </div>
        <div class="card-body">
            <h4 class="card-title">${post.title}</h4>
            <p class="card-text" style="font-size:16px;font-family: 'Nunito', sans-serif;">${post.content.slice(0, 175) + (post.content.length > 175 ? '...' : '')}</p>
            <a class="btn btn-danger btn-sm px-3" style="font-family: 'Nunito', sans-serif;" href="/articles/${post._id}">Read More</a>
        </div>
        </div>`;
    });
    document.getElementById("postsDisplay").innerHTML = html;
  }

  function renderPagination() {
    let html = "";
    html += `
      <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">Previous</a>
      </li>
    `;
    for (let i = 1; i <= totalPages; i++) {
      html += `
        <li class="page-item ${currentPage === i ? 'active' : ''}">
          <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
        </li>`;
    }
    html += `
      <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">Next</a>
      </li>
    `;
    document.getElementById("pagination").innerHTML = html;
  }

  function changePage(page) {
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    renderPosts();
    renderPagination();
  }

  // Initial render
  renderPosts();
  renderPagination();
    </script>
</body>
</html>